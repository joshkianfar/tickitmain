<div class="d-flex justify-content-center align-items-center vh-100">
  <div>
    <div class="center-container">
    <%= image_tag "TickItLogoEmpty.png", alt: "Logo", class: "d-block mx-auto custom-logo" %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'text-center' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row align-items-center">
        <div class="col">
          <div class="field mb-3">
            <%= f.label :first_name, "First Name", class: "form-label", style: "font-weight: bold;" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, class: "form-label", style: "font-weight: bold;" %>
            <% if @minimum_password_length %>
            <em style="font-weight: bold;">(<%= @minimum_password_length %> chars min)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :username, class: "form-label", style: "font-weight: bold;" %>
            <%= f.text_field :username, class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :house_name, "House Name/Number", class: "form-label", style: "font-weight: bold;" %>
            <%= f.text_field :house_name, class: "form-control" %>
          </div>

        </div>
        <div class="col">

          <div class="field mb-3">
            <%= f.label :last_name, "Last Name", class: "form-label", style: "font-weight: bold;" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label", style: "font-weight: bold;" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :email, class: "form-label", style: "font-weight: bold;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :post_code, "Post Code (UK)", class: "form-label", style: "font-weight: bold;" %>
            <%= f.text_field :post_code, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="actions mb-4">
        <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-4 devise-links text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
