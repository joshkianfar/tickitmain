<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
  <div class="text-center">
    <div class="center-container">

    <%= form_with(model:@item, html: { class: 'text-center' }) do |form| %>
      <% if @item.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(item.errors.count, "error(s)") %> prohibited this item from being saved:</h2>

          <ul>
            <% item.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field mb-3">
        <%= form.label :description %><br />
        <%= form.text_field :description, class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= form.label :sell_goal %><br />
        <%= form.number_field :sell_goal, class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= form.label :more_info %><br />
        <%= form.text_field :more_info, class: 'form-control' %> <br />

      <div class="actions">
        <%= form.submit "Post Item", data: {turbo: false}, class: 'btn btn-primary' %>
        <%= link_to "Back to items", items_path, class: 'btn btn-danger' %>
      </div>
    <% end %>

  </div>
</div>
