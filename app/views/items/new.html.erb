<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
  <div class="text-center">
    <div class="center-container">

        <%= render "remote_modal", title: "Sell an Item" do %>
          <%= form_with(model: @item) do |form| %>

            <div class="field mb-3">
              <%= form.label :description %>
              <%= form.text_field :description, class: 'form-control' %>
              <div style="color: red">
                <% if @item.errors.include?(:description) %>
                    <% @item.errors.full_messages_for(:description).each do |error_message| %>
                      <%= error_message %>.
                    <% end %>
                <% end %>
              </div>
            </div>

            <div class="field mb-3">
              <%= form.label :sell_goal, "Sell Goal (Â£)" %>
              <%= form.number_field :sell_goal, class: 'form-control' %>
              <div style="color: red">
                <% if @item.errors.include?(:sell_goal) %>
                    <% @item.errors.full_messages_for(:sell_goal).each do |error_message| %>
                      <%= error_message %>.
                    <% end %>
                <% end %>
              </div>
            </div>

            <div class="field mb-3">
              <%= form.label :image %>
              <%= form.file_field :image, class: 'form-control' %>
              <div style="color: red">
                <% if @item.errors.include?(:image) %>
                    <% @item.errors.full_messages_for(:image).each do |error_message| %>
                      <%= error_message %>.
                    <% end %>
                <% end %>
              </div>
            </div>

            <div class="actions">
              <%= link_to "Back to items", root_path, class: 'btn btn-danger' %>
              <%= form.submit "Post Item", class: 'btn btn-primary', data: (@item.errors.any? ? { turbo_frame: 'remote_modal' } : {}) %>
            </div>
          <% end %>

        <% end %>
    </div>
  </div>
</div>