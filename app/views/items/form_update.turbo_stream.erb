<%= turbo_stream.update "remote_modal_body" do %>
  <%= form_with(model: @item, html: { class: 'text-center' }) do |form| %>
    <div class="field mb-3">
      <%= form.label :description %><br />
      <%= form.text_field :description, class: 'form-control' %>
      <div style="color: red">
        <% if @item.errors.include?(:description) %>
            <% @item.errors.full_messages_for(:description).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="field mb-3">
      <%= form.label :sell_goal, "Sell Goal (Â£)" %><br />
      <%= form.number_field :sell_goal, class: 'form-control' %>
      <div style="color: red">
        <% if @item.errors.include?(:description) %>
            <% @item.errors.full_messages_for(:description).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="field mb-3">
      <%= form.label :image %><br />
      <%= form.file_field :image, class: 'form-control' %> <br />
      <div style="color: red">
        <% if @item.errors.include?(:description) %>
            <% @item.errors.full_messages_for(:description).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= link_to "Back to items", root_path, class: 'btn btn-danger' %>
      <%= form.submit "Post Item", data: {turbo: false}, class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>